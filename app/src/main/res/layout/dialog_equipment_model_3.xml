<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbarDefaultDelayBeforeFade="5000"
    android:scrollbarFadeDuration="0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:background="@color/light_grey"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Name *"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_size_small" />

                <EditText
                    android:id="@+id/et_service_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_background"
                    android:hint="Service name "
                    android:inputType="text"
                    android:lines="1"
                    android:padding="8dp"
                    android:textColor="@color/text_color_primary"
                    android:textColorHint="@color/text_color_primary_light"
                    android:textSize="@dimen/text_size_medium" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Frequency *"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_size_small" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_background"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_inspection_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:textColor="@color/text_color_primary"
                        android:textSize="@dimen/text_size_medium" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_other_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:text="Other Day *"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_size_small" />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frequency No *"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_size_small" />

                <EditText
                    android:id="@+id/et_service_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_background"
                    android:hint="Frequency no "
                    android:inputType="number"
                    android:lines="1"
                    android:padding="8dp"
                    android:textColor="@color/text_color_primary"
                    android:textColorHint="@color/text_color_primary_light"
                    android:textSize="@dimen/text_size_medium" />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_last_service_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Service Date "
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_size_small" />

                <com.cdlit.assetmaintenanceapp.Utils.CustomTextView
                    android:id="@+id/tv_last_service_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_background"
                    android:padding="8dp"
                    android:text="Select Last Service Date"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_size_medium"
                    app:drawableRightCompat="@drawable/ic_arrow_drop_down_black_18px" />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_next_service_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next Service Date *"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_size_small" />

                <com.cdlit.assetmaintenanceapp.Utils.CustomTextView
                    android:id="@+id/tv_next_service_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_background"
                    android:padding="8dp"
                    android:text="Select Next Service Date"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/text_size_medium"
                    app:drawableRightCompat="@drawable/ic_arrow_drop_down_black_18px" />

            </TableRow>

        </TableLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_add_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            app:srcCompat="@drawable/ic_add_white_24px" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_asset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:scrollbars="vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/light_grey" />

    </LinearLayout>


</ScrollView>